<script>
// Countdown sampai jam 00:00 tanggal 21 Feb 2026
var birthday = new Date("Feb 21, 2026 00:00:00").getTime();
var countdown = setInterval(function(){
  var now = new Date().getTime();
  var distance = birthday - now;

  if(distance>0){
    var days = Math.floor(distance / (1000*60*60*24));
    var hours = Math.floor((distance % (1000*60*60*24))/(1000*60*60));
    var minutes = Math.floor((distance % (1000*60*60))/(1000*60));
    var seconds = Math.floor((distance % (1000*60))/1000);

    document.getElementById("countdown").innerHTML = 
      days + "d " + hours + "h " + minutes + "m " + seconds + "s lagi menuju ulang tahun ğŸ‰";
  } else {
    document.getElementById("countdown").innerHTML = "HARI INI WINDAAA ULTAH ğŸ‰ğŸ’œ";
    clearInterval(countdown);
    startCelebration();
  }
},1000);

// Fungsi mulai perayaan
var cakeClicked = false;
function startCelebration(){
  confetti();
  createGlitter(50);
  showCake();
  showLetter();
  startLoveRain();
}

// Show cake
function showCake(){
  document.getElementById("cake").style.display = "block";
  document.getElementById("cakeText").innerHTML = "Klik kue untuk tiup lilin ğŸ‚âœ¨";
}

// Show letter otomatis
var letterShown = false;
function showLetter(){
  if(!letterShown){
    document.getElementById("letter").style.display="block";
    letterShown = true;
  }
}

// Cake click
document.getElementById("cake").onclick=function(){
  var audio=document.getElementById("birthdaySong");
  audio.currentTime=0;
  audio.play();
  confetti();
  createGlitter(30);
  cakeClicked = true;
  checkGiveaway();
}

// Check giveaway
function checkGiveaway(){
  if(cakeClicked){
    showPopup();
  }
}

// Popup
function showPopup(){
  document.getElementById("overlay").style.display="block";
  document.getElementById("popup").style.display="block";
}
function closePopup(){
  document.getElementById("overlay").style.display="none";
  document.getElementById("popup").style.display="none";
}

// Glitter
function createGlitter(count){
  for(let i=0;i<count;i++){
    let g = document.createElement("div");
    g.classList.add("glitter");
    g.style.left = Math.random()*window.innerWidth + "px";
    g.style.background = `hsl(${Math.random()*360}, 100%, 80%)`;
    g.style.animationDuration = 0.5 + Math.random()*1 + "s";
    document.body.appendChild(g);
    setTimeout(()=>g.remove(),1000);
  }
}

// Hujan Love
function startLoveRain(){
  setInterval(()=>{
    let heart = document.createElement("div");
    heart.classList.add("heart");
    heart.style.left = Math.random()*window.innerWidth + "px";
    heart.style.animationDuration = 3 + Math.random()*2 + "s";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),5000);
  },300);
}
</script>
